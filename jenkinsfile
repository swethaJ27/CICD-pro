pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        // Fetch code from GitHub
        git branch: 'master', url: 'https://github.com/swethaJ27/CICD-pro.git.git'
      }
    }

    stage('Deploy') {
      steps {
        // Copy code into Apache webroot
        sh '''
          echo "Deploying website..."
          sudo cp -r index.html /var/www/html/
          sudo systemctl restart apache2
          echo "Deployment completed!"
        '''
      }
    }
  }
}
